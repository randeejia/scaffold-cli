{
  "name": "@randee/scaffold-cli",
  "version": "0.0.1",
  "description": "A powerful CLI tool for scaffolding projects with template handling and build status notifications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "scaffold-cli": "./bin/cli.js",
    "scaffold": "./bin/cli.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "templates/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=22.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/randeejia/scaffold-cli.git"
  },
  "homepage": "https://github.com/randeejia/scaffold-cli#readme",
  "bugs": {
    "url": "https://github.com/randeejia/scaffold-cli/issues"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "start": "node ./bin/cli.js",
    "dev": "npm run build && npm start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run lint && npm run format:check && npm run build",
    "postbuild": "cp -r templates dist/ || xcopy templates dist\\templates\\ /E /I",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^14.0.0",
    "consolidate": "^0.15.1",
    "download-git-repo": "^0.0.2",
    "handlebars": "^4.7.7",
    "inquirer": "^8.2.0",
    "metalsmith": "^2.3.0",
    "ora": "^6.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/inquirer": "^8.1.1",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "cli",
    "scaffold",
    "template",
    "project"
  ],
  "author": "Randee Jia",
  "license": "Apache License 2.0"
}
